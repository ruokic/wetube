mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls#jsVideoControllers
            .videoPlayer__column 
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column 
                input#jsVideoTimeBar(type="range", max="1", min="0", step="1", value="0")
                span
                    span#currentTime 00:00:00
                    |/
                    span#totalTime 00:00:00
            .videoPlayer__column 
                span#jsVolumeButton
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.01", value="0.5")
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand